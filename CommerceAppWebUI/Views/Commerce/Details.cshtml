@using CommerceAppWebUI.Models
@model ProductDetailModel

<div class="row g-0">
<div class="col-md-3">
    <div class="m-1">
        <img src="~/img/@Model.Product.ImgUrl" class="img-fluid rounded-start">
    </div>
</div>
<div class="col-md-9">
    <h3 class="mt-3">@Model.Product.Name</h3> <hr>
    @foreach (var item in Model.Categories)
        {
            <a asp-controller="Commerce" asp-action="List" asp-route-category="@item.Url" class=" btn btn-link p-0 mb-0">@item.Name</a>
        }
    <p class="">@Model.Product.Price $</p>
    <button type="submit" class="btn btn-primary">Add To Card</button>
</div>
    <div class="row">
        <div class="col=md-12">
            <p class="p-3">@Model.Product.Description</p>
        </div>
    </div>
</div>
