@model CategoryListViewModel
<div class="row">
    <div class="col-md-10">
        <h1 class="h3">Admin Categories</h1>
        <hr>
        <a href="CreateCategory" class="btn btn-outline-primary btn-sm mb-3">Add Category</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 30px;">Id</th>
                    <th>Name</th>
                    <th style="width: 150px;">Edit / Delete</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Categories.Count!=0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/Admin/EditCategory/@item.CategoryId" class="btn btn-primary btn-sm">Edit</a>

                                <form action="/Admin/DeleteCategory/@item.CategoryId" method="post" style="display:inline;">
                                    <input type="hidden" name="CategoryId" value="@item.CategoryId">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
