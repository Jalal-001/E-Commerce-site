@model RoleModel

<h1 class="h3">Add Role</h1>
<hr >
<div class="row">
    <div class="col-md-10">
        <form asp-controller="Admin" asp-action="RoleCreate" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 form-label" asp-for="@Model.Name"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Name">
                </div>
                 <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-2">
                    <button type="submit" class="btn btn-outline-primary">Create Role</button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts
{
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
