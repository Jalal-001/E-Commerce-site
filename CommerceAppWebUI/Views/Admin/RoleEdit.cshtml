@model RoleDetails

<h3>Edit Roles</h3>
<hr>

<div class="row">
    <div class="col-md-12">
       <form asp-controller="Admin" asp-action="RoleEdit" method="post">
           <input type="hidden" name="RoleId" value="@Model.Role.Id">
           <input type="hidden" name="RoleName" value="@Model.Role.Name">
           <h6 class="bg-info text-white p-1">Add to @Model.Role.Name</h6>
           <table class="table table table-bordered table-sm">
               @if(Model.NonMembers.Count()==0)
               {
                   <tr>
                        <td colspan="2">All users belong to a role!</td>
                   </tr>
               }
               else
               {
                   @foreach (var user in Model.NonMembers)
                   {
                        <tr>
                            <td>@user.UserName</td>

                            <td style="width: 150px;">
                                <input type="checkbox" name="IdsToAdd" value="@user.Id">
                            </td>
                        </tr>
                   }
               }
           </table>

           <hr>

           <h6 class="bg-info text-white p-1">Delete from @Model.Role.Name</h6>
           <table class="table table table-bordered table-sm">
                @if (Model.Members.Count() == 0)
                {
                    <tr>
                        <td colspan="2">No user found for role!</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>

                            <td style="width: 150px;">
                                <input type="checkbox" name="IdsToDelete" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
           </table>
           <button type="submit" class="btn btn-outline-info btn-sm mb-3">Save Changes</button>
       </form>
    </div>
</div>